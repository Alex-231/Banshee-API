<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Banshee Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
</head>
<body>
<div class="container" style="width:854;height:480;">

<div class="col-sm-6 col-sm-offset-3">

    <h1 style="text-align:center;">Login</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label>Username</label>
            <input style="width:794px" type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input style="width:794px" type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Login</button>
    </form>

    <hr style="
        margin-top: 0px;
        margin-bottom: 10px;
    ">

    <div style="
        position: fixed;
        bottom: 10px;
    ">
    <p>Need an account? <a href="/signup">Signup</a></p>
    <p>Or go <a href="/">back</a>.</p>
          </div>

</div>

</div>
</body>
</html>
